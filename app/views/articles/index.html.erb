<div id="page-content">
  <h1 class= "text-center">Artykuły</h1>
  <p class="text-center">
    <button class="btn btn-primary"><%= link_to "Dodaj nowy artykuł",new_article_path, class: "text-center text-white text-decoration-none"%></button>
  </p>

  <% @articles.each do |article| %>
    <div class="row justify-content-md-center mb-5 ">
      <div class="col-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header">
          Artykuł
          </div>
          <div class="card-body">
            <h5 class="card-title "><%= link_to article.title,article_path(article),class: "text-decoration-none "%></h5>
            <p class="card-text"><%= truncate((article.description), length: 100) %></p>
              <button class="btn btn-outline-info"><%= link_to "Pokaż", article_path(article),class: " text-decoration-none " %></button>
              <button class="btn btn-outline-secondary"><%= link_to "Edytuj", edit_article_path(article),class: " text-decoration-none "%></button>
              <button class="btn btn-outline-danger"><%= link_to "Usuń", article_path(article), method: :delete,data: { confirm: "Na pewno chcesz usunąć artykuł?"},class: " text-decoration-none text-danger" %></button>

          </div>
        
          <div class="card-footer text-muted">
            Utworzono: <%= article.created_at %> zmodyfikowano: <%= article.updated_at %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>