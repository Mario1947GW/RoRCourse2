
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center  ">
      <div class="col-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header">
          <h5 class="text-black-50">Artykuł napisany przez: <h3><%=link_to article.user.username, user_path(article.user), class: "text-decoration-none"%></h3></h5>
          </div>
          <div class="card-body">
            <h5 class="card-title "><%= link_to article.title,article_path(article),class: "text-decoration-none "%></h5>
            <p class="card-text"><%= truncate((article.description), length: 100) %></p>
              <button class="btn btn-outline-info"><%= link_to "Pokaż", article_path(article),class: " text-decoration-none " %></button>
              <% if logged_in? && (current_user == article.user || current_user.admin?)  %>
                <button class="btn btn-outline-secondary"><%= link_to "Edytuj", edit_article_path(article),class: " text-decoration-none "%></button>
                <%= button_to "Usuń", article_path(article), data: {confirm: "Na pewno chcesz usunąć artykuł?"}, method: :delete, class: " btn btn-outline-danger text-decoration-none"%>
              <% end%>
          </div>
          <div class="card-footer text-muted">
            Utworzono: <%= time_ago_in_words(article.created_at) %> temu | zmodyfikowano: <%= time_ago_in_words(article.updated_at)  %> temu
          </div>
        </div>
      </div>
    </div>
  <% end %>