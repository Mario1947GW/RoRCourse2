<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%=render 'shared/errors', obj: @article%>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>
        <div class="form-group row">
          <%= f.label :title , "Tytuł", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow p-3 mb-3 rounded", placeholder: "Tytuł artykułu" %> 
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description , "Opis", class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow p-3 mb-3 rounded ", placeholder: "Opis artykułu" %> 
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, "Kategoria", class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Wybierz kategorię z listy"},{ multiple: true, size: 3, class: "form-select shadow rounded mb-3"}) %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <div class="col-2">
            <%= f.submit(@article.new_record? ? "Stwórz artykuł" : "Zaktualizuj artykuł", class: "btn btn-outline-light btn-lg" ) %>
          </div>
        </div>
      <% end %>    
    </div>
    <div class="form-group row justify-content-center">
      <div class="col-3 mb-3">
        <%= link_to "[ Wróć do strony z artykułami ]", articles_path, class: "text-info text-decoration-none"%>
      </div>
    </div>
  </div>
</div>