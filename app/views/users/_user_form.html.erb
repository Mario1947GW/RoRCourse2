<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%=render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>
        <div class="form-group row">
          <%= f.label :username , "Nazwa użytkownika", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow p-3 mb-3 rounded", placeholder: "Nazwa użytkownika" %> 
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email , "Adres email", class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow p-3 mb-3 rounded ", placeholder: "Adres e-mail" %> 
          </div>
        </div>

         <div class="form-group row">
          <%= f.label :password , "Hasło", class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow p-3 mb-3 rounded ", placeholder: "Hasło" %> 
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-2">
            <%= f.submit(@user.new_record? ? "Załóż konto" : "Zaktualizuj konto", class: "btn btn-outline-light btn-lg" ) %>
          </div>
        </div>
      <% end %>    
    </div>
    <div class="form-group row justify-content-center">
      <div class="col-3 mb-3">
        <%= link_to "[ Wróć do strony z artykułami ]", articles_path, class: "text-info text-decoration-none"%>
      </div>
    </div>
  </div>
</div>