<% if obj%>
  <% if obj.errors.any? %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert"> 
      <h4 class="alert-heading">Następujące błędy uniemożliwiły zapis</h2>
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li> 
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij">
      </button>
    </div>
  <% end %>
<% end%>
